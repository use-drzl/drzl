{
  "name": "@drzl/cli",
  "version": "0.1.0",
  "private": false,
  "license": "Apache-2.0",
  "type": "module",
  "bin": {
    "drzl": "dist/cli.js"
  },
  "main": "dist/cli.js",
  "types": "dist/config.d.ts",
  "exports": {
    ".": {
      "import": "./dist/cli.js"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/config.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.ts src/config.ts --format esm,cjs --sourcemap --dts",
    "dev": "node --loader ts-node/esm src/cli.ts --help",
    "lint": "eslint . --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@drzl/analyzer": "workspace:^",
    "@drzl/generator-orpc": "workspace:^",
    "@drzl/generator-zod": "workspace:^",
    "@drzl/generator-service": "workspace:^",
    "@drzl/generator-valibot": "workspace:^",
    "@drzl/generator-arktype": "workspace:^",
    "commander": "^14.0.0",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "ora": "^8.2.0",
    "cli-progress": "^3.12.0",
    "zod": "^4.1.5",
    "jiti": "^2.5.1"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/use-drzl/drzl",
    "directory": "packages/cli"
  }
}
